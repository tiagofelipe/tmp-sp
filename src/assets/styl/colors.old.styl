/* UCOLORS */
.bg-gd
  gradient-vertical(rgba(40, 50, 60, 0), rgba(40, 50, 60, 0.075), 0, 100%)
  filter: none

.bg-gd-dk
  gradient-vertical(rgba(40, 50, 60, 0), rgba(40, 50, 60, 0.5), 10%, 100%)
  filter: none

.bg-light
  color-variant($light, 2, 3, 3, 5)
  color: $text-color

.bg-dark
  color-variant($dark, 5, 10, 5, 10)
  font-wariant($dark)

.bg-black
  color-variant($black, 5, 10, 5, 10)
  font-wariant($black)

.bg-primary
  color-variant($primary, 5, 10, 5, 10)
  font-wariant($primary)

.bg-success
  color-variant($positive, 5, 10, 5, 10)
  font-wariant($positive)

.bg-info
  color-variant($info, 5, 10, 5, 10)
  font-wariant($info)

.bg-warning
  color-variant($warning, 5, 10, 5, 10)
  font-wariant($warning)

.bg-danger
  color-variant($negative, 5, 10, 5, 10)
  font-wariant($negative)

.bg-white
  background-color: #fff
  color: $text-color
  a
    color: $link-color
    &:hover
      color: $link-hover-color
  .text-muted
    color: $text-muted !important
  .lt,
  .lter,
  .dk,
  .dker
    background-color: #fff

.bg-white-only
  background-color: #fff

.bg-white-opacity
  background-color: rgba(255, 255, 255, 0.5)

.bg-black-opacity
  background-color: rgba(32, 43, 54, 0.5)

.bg-black-opacity2
  background-color: rgba(32, 43, 54, 0.2)

a.bg-light
  &:hover
    color: $link-color

text-wariant($primary, primary)
text-wariant($info, info)
text-wariant($positive, success)
text-wariant($warning, warning)
text-wariant($negative, danger)
text-wariant($dark, dark)
text-wariant($black, black)
.text-white
  color: #fff

.text-black
  color: #000

.text-muted
  color: $text-muted

.bg
  background-color: $body-bg
