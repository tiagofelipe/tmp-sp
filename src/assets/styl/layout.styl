  font-weight: normal !important

ul li
  list-style: none

a, a:hover
  text-decoration: none

p a:hover, p a:focus
  border-bottom-color: transparent

img
  max-width: 100%

fieldset
  border: none

main
  display: block

[hidden], template
  display: none

small
  font-size: 12px

button::-moz-focus-inner, input::-moz-focus-inner
  border: 0
  padding: 0

::-webkit-scrollbar
  width: 8px
  height: 8px

::-webkit-scrollbar-button
  width: 0
  height: 0

::-webkit-scrollbar-thumb
  background: #c0d0e6
  border: 8px none #fff
  border-radius: 10px

::-webkit-scrollbar-thumb:hover
  background: #9aaabe

::-webkit-scrollbar-thumb:active
  background: #9aaabe

::-webkit-scrollbar-track
  background: #e6ecf5
  border: 9px none #fff
  border-radius: 10px
  margin: 6px 0

::-webkit-scrollbar-track:hover
  background: #e6ecf5

::-webkit-scrollbar-track:active
  background: #e6ecf5

::-webkit-scrollbar-corner
  background: transparent

h1, .h1 { font-size: $font-size-h1; }
h2, .h2 { font-size: $font-size-h2; }
h3, .h3 { font-size: $font-size-h3; }
h4, .h4 { font-size: $font-size-h4; }
h5, .h5 { font-size: $font-size-h5; }
h6, .h6 { font-size: $font-size-h6; }

.u-main
  width: 100%
  overflow: auto
  height: 100%
  padding: 0 30px
  position: relative
  calc_size = $header-menu-height + $header-nav-height
  height: "calc(100% - %s)" % (calc_size)

  &.u-no-nav{
    calc_size = $header-menu-height
    height: "calc(100% - %s)" % (calc_size)
  }
.u-flex
  display: -webkit-box
  display: -ms-flexbox
  display: flex

.u-main-content
  &.content-flex
    display: -webkit-box
    display: -ms-flexbox
    display: flex
    -ms-flex-flow: wrap
    flex-flow: wrap
    -webkit-box-flex: 1
    -ms-flex: 1
    flex: 1
    -ms-flex-line-pack: start
    align-content: flex-start
    height: 100%
    overflow: overlay
    padding: 0 40px 50px 50px
    overflow-x: hidden

